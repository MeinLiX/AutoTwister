<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AutoTwister.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:AutoTwister.Common.View"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Game"
        ContentTemplate="{DataTemplate view:GamePage}"
        Route="GamePage" />
    
    <ShellContent
        Title="Players"
        ContentTemplate="{DataTemplate view:UserManagerPage}"
        Route="UserManagerPage" />

    <ShellContent
        Title="Localization Settign"
        ContentTemplate="{DataTemplate view:LocalizationSettingPage}"
        Route="LocalizationSettingPage" />
</Shell>

